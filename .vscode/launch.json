    "version": "0.2.0",
    "configurations": [
        {
            "name": "ray_tracing",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/ray_tracing.exe",
            "args": ["${workspaceFolder}/world.json"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "rust: cargo build"
        },
        {
            "name": "Main",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/main.exe",
            "args": ["${workspaceFolder}/scenes/sine.json"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "rust: cargo build"
        }
    ]
}